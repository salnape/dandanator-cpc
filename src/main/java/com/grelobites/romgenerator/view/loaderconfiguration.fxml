<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grelobites.romgenerator.view.LoaderConfigurationController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="%useCustomRomSet" />
            <Label fx:id="customRomSetPath" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="17.0" prefWidth="174.0" text="%none" HBox.hgrow="ALWAYS" />
            <Button fx:id="changeCustomRomSetPathButton" mnemonicParsing="false" text="%changeButton" />
            <Button fx:id="resetCustomRomSetPathButton" mnemonicParsing="false" text="%resetButton" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
         <children>
            <RadioButton fx:id="serialBlockService" mnemonicParsing="false" selected="true" text="%serialBlockService">
               <toggleGroup>
                  <ToggleGroup fx:id="blockServiceType" />
               </toggleGroup>
            </RadioButton>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="28.0" prefWidth="560.0" spacing="10.0">
         <children>
            <Label text="%bySerialPort" />
            <ComboBox fx:id="serialPort" maxWidth="1.7976931348623157E308" prefHeight="27.0" prefWidth="247.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshSerialPorts" mnemonicParsing="false">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="18.0" preserveRatio="true">
                     <image>
                        <Image url="@/eewriter/refresh.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
         <children>
            <RadioButton fx:id="httpBlockService" mnemonicParsing="false" text="%httpBlockService" toggleGroup="$blockServiceType" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
         <children>
            <Label text="%httpUrl" />
            <TextField fx:id="httpUrl" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
   </padding>
</VBox>
